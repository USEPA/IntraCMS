{
    "name": "acquia/lightning-project",
    "type": "project",
    "description": "Project template for Drupal 8 sites built with the Lightning distribution.",
    "license": "GPL-2.0-or-later",
    "require": {
        "acquia/lightning": "^4.0",
        "cweagans/composer-patches": "^1.6.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/group": "^1.0",
        "drupal/groupmenu": "^1.0",
        "drupal/entity_reference_tree": "^1.8",
        "drupal/fullcalendar_view": "^2.2",
        "drupal/smart_date": "^1.0",
        "drupal/paragraphs": "^1.8",
        "drupal/simplesamlphp_auth": "^3.1",
        "drupal/admin_toolbar": "^1.27",
        "drupal/uswds": "^2.0@RC",
        "drupal/fontawesome": "^2.14",
        "wikimedia/composer-merge-plugin": "^1.4",
        "drupal/config_filter": "^1.4",
        "drupal/config_ignore": "^2.1",
        "drupal/config_split": "^1.4",
        "drupal/migrate_plus": "^4.2",
        "drupal/migrate_tools": "^4.3",
        "drupal/address": "~1.0",
        "drupal/chosen": "^2.8",
        "drupal/layout_builder_styles": "^1.0@beta",
        "drupal/devel": "^2.1",
        "drupal/block_blacklist": "^1.0",
        "drupal/editor_file": "^1.4",
        "drupal/path_file": "^1.0",
        "drupal/linkit": "^5.0",
        "drupal/views_bulk_operations": "^3.2",
        "drupal/views_add_button": "^1.3",
        "drupal/views_add_button_group": "^1.4",
        "fontawesome/fontawesome": "5.9.0",
        "drupal/twig_field_value": "^1.2",
        "bootstrap/bootstrap": "4.1.3",
        "drupal/extlink": "^1.1"

    },
    "require-dev": {
        "drush/drush": "^9.0"
    },
    "config": {
        "process-timeout": 0
    },
    "extra": {
        "patches": {
            "drupal/group": {
                "2797793: Associate menu with a group": "https://www.drupal.org/files/issues/2019-07-23/group-support_string_entity_ids-2797793-164.patch",
                "2774827: Get a token of a node's parent group to create a pathauto pattern": "https://www.drupal.org/files/issues/2018-12-19/group-2774827-41-gnode-tokens.patch"
            },
            "drupal/groupmenu": {
                "3010909: Group menu association": "https://www.drupal.org/files/issues/2019-04-04/groupmenu-change_references_to_entity_id-3010909-9.patch",
                "3076635: Add max depth option to group menu block": "https://www.drupal.org/files/issues/2019-08-22/group-menu-max-depth-3076635-2.patch"
            },
            "drupal/fullcalendar_view": {
                "3061341: Provide support for Smart Date": "https://www.drupal.org/files/issues/2019-07-04/fullcalendar_view-smart_date-support-3061341-14.patch"
            },
            "drupal/uswds": {
                "3046222: Adopting uswds_paragraphs theming": "https://www.drupal.org/files/issues/2019-04-05/uswds-adopt_uswds_paragraph_theming.patch"
            },
            "drupal/core": {
                "3059387: Taxonomy Terms cannot be rendered when in preview: EntityMalformedException": "https://www.drupal.org/files/issues/2019-06-04/malformedentityexception-3059387.patch",
                "2719797: New option for Views page displays to use the admin theme": "https://www.drupal.org/files/issues/2019-06-10/core-88x--views--admin-path-2719797-77.patch",
                "2950729: Undefined offset 1 in the MenuParentFormSelector.php": "https://www.drupal.org/files/issues/2019-09-17/2950729-14.patch"
            },
            "merge-plugin": {
                "include": [
                    "docroot/modules/contrib/fontawesome/composer.libraries.json"
                ]
            }
        },
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ]
    },
    "repositories": [
        {
            "name": "drupal",
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "name": "assets",
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "name": "dev",
            "type": "github",
            "url": "https://github.com/acquia/lightning-dev",
            "no-api": true
        },
        {
            "type": "package",
            "package": {
                "name": "fontawesome/fontawesome",
                "type": "drupal-library",
                "version": "5.9.0",
                "dist": {
                    "url": "https://use.fontawesome.com/releases/v5.9.0/fontawesome-free-5.9.0-web.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "^1.2.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "bootstrap/bootstrap",
                "type": "drupal-library",
                "version": "4.1.3",
                "dist": {
                    "url": "https://github.com/twbs/bootstrap/releases/download/v4.3.1/bootstrap-4.3.1-dist.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "^1.2.0"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "install.ord": [
            "composer install",
            "rm -f docroot/web.config"
        ],
        "post-install-cmd": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-update-cmd": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-create-project-cmd": "rm -r -f .travis.yml behat.yml .travis-ci",
        "nuke": "rm -r -f docroot/modules/contrib docroot/profiles/contrib/lightning vendor composer.lock",
        "quick-start": [
            "composer install",
            "php docroot/core/scripts/drupal quick-start lightning --no-interaction"
        ]
    }
}
